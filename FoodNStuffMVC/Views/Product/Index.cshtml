@model IEnumberable<FoodNStuffMVC.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create a New Product", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
               $ @Html.DisplayFor(model => model.Price)
            </td>
            <td>
                @Html.DisplayFor(model => model.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(model => model.IsFood)
            </td>
            <td>
                @Html.Action("Edit", "Edit", new { id = item.ProductID }) |
                @Html.Action("Details", "Details", new { id = item.ProductID }) |
                @Html.Action("Delete", "Delete", new { id = item.ProductID }) 
            </td>
        </tr>
    }
</table>
